@model IEnumerable<NotepadApp.Models.Note>

    <h2>Notes</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Note</a>
    </p>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Content</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var note in Model)
        {
            <tr>
                <td>@note.Title</td>
                <td>@note.Content</td>
                <td>@note.CreatedAt.ToString("g")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@note.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@note.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
